/* pages/analog/analogs/result/content/content.wxss */
.banner{
  width:100%;
  height:300rpx;
  position: absolute;
  z-index: -1;
  top:0
}
.banner image{
  width:100%;
  height:100%;
}
.top{
  margin:100rpx 0 30rpx 14%;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-weight:bold;
}
.top-right{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left:30rpx;
  height:125rpx;
}
.top-right-1{
  font-size:35rpx;
  padding-bottom:10rpx;
}
.top-right-2{
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.top-right-2 text{
  margin-right:15rpx;
}

.weui-flex__item1{
  width:25%;
  padding:10rpx 0;
}
.weui-flex__item2{
  width:15%;
  padding:10rpx 0;
}
.weui-flex__items{
  width:45%;
  padding:10rpx 0;
}
.placeholder{
  text-align: center;
}
.page__bd_spacing{
  padding-top:20rpx;
  background-color: white;
}
.whole{
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-bottom:1rpx solid #EEEEEE;
  background-color:white;
}
.left{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width:25%;
  padding:10rpx 0;
}
.left text{
  text-align: center;
}
.center{
  width:62%;
  border-left:1px solid #eee;
  border-right:1px solid #eee;
  text-align: center;
}
.right{
  width:13%;
  text-align: center;
}
.year{
  text-align: left;
  padding-left:15rpx;
}
.collection{
  color:rgb(90,180,170);
  border-bottom:1px solid rgb(90,180,170);
  padding:5rpx 0;
}
.collection2{
  color:#999;
  padding:5rpx 0;
}
.distance{
  padding:0rpx;
}
.center-grade{
  width:100%;
  display: flex;
  flex-direction: row;
  font-size:28rpx;
  background-color: #DDDDDD;
}
.center-item{
  width:20%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bottom{
  width:100%;
  margin-top:20rpx;
  display: flex;
  flex-direction: row;
  font-size:28rpx;
  background-color: white;
}
.bottom-item{
  width:20%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}