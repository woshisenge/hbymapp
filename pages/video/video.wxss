.section{
  width:96%;
  margin:5rpx 2% 5rpx 2%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.section-item{
  width:49%;
}
.images{
  width:100%;
  height:200rpx;
}
.time{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.count{
  width:50%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.date{
  width:50%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.text{
  font-size:24rpx;
}