/* pages/news/news.wxss */
.content{
  width: 100%;
  height:200rpx;
  margin:10rpx 5rpx 0 10rpx;
  display: flex;
  flex-direction: row;
  justify-content:flex-start;
  align-items:center;
}
.content-left{
  width:30%;
  height:150rpx; 
}
.content-left image{
  width:100%;
  height:100%;
}
.content-right{
  width:60%;
  height:150rpx;
  margin-left:40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
 .item-title{
  display: flex;
  justify-content: flex-start;
  align-items: center;
} 
.item-time{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.time-img{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.time-count{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-left:20rpx;
}