<!--pages/register/register.wxml-->
<!-- 注册页面 -->
<form bindsubmit='formSubmit'>
  <view class="page__bd">
  <view class="weui-cells__title">学生注册</view>
  <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
              <view class="weui-label">注册账号</view>
          </view>
          <view class="weui-cell__bd">
              <input class="weui-input" placeholder="请输入手机号" name="USERNAME"/>
              
          </view>
      </view>
      </view>
      <view class="weui-cells__tips" style='color:red'>*例：18888888888</view> 
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">手机号</view>
            </view>
            <view class="weui-cell__bd">
                <input number class="weui-input" placeholder="请输入手机号" name="PHONE" bindinput='inputPhone'/>
            </view>
        </view> 
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">密码</view>
            </view>
            <view class="weui-cell__bd">
                <input password class="weui-input" placeholder="请输入密码" name="PASSWORD"/>
            </view>
        </view>
      </view>
      <view class="weui-cells__tips" style='color:red'>*6-16位英文（含大小写）、数字、下划线</view> 
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
            <view class="weui-cell__hd">
                <view class="weui-label">确认密码</view>
            </view>
            <view class="weui-cell__bd">
                <input password class="weui-input" placeholder="再次确认密码" name="REPASSWORD"/>
            </view>
        </view>
        <view class="weui-cell weui-cell_input weui-cell_vcode">
            <view class="weui-cell__hd">
                <view class="weui-label">验证码</view>
            </view>
            <view class="weui-cell__bd">
                <input class="weui-input" placeholder="请输入验证码" name="CODE"/>
            </view>
            <view class="weui-cell__ft">
              <view class="weui-vcode-btn" wx:if='{{codeHidden}}' bindtap='getSMSCode'>获取验证码</view>
              <view class="weui-vcode-btn" wx:if='{{!codeHidden}}'>重新获取（{{timerNumber}}s后）</view>
            </view>
        </view>
      </view>
  </view>
  <checkbox-group bindchange="bindAgreeChange">
      <label class="weui-agree" for="weuiAgree">
          <view class="weui-agree__text">
              <checkbox class="weui-agree__checkbox" id="weuiAgree" value="agree" checked="{{isAgree}}" />
              <view class="weui-agree__checkbox-icon">
                  <icon class="weui-agree__checkbox-icon-check" type="success_no_circle" size="9" wx:if="{{isAgree}}"></icon>
              </view>
              我已阅读并同意遵守<navigator url="/pages/article/article">《铭邦高考规划平台会员服务条款》</navigator>
          </view>
      </label>
  </checkbox-group>

  <view class="weui-btn-area">
      <button class="weui-btn" type="primary" form-type='submit'>立即注册</button>
  </view>
</form>