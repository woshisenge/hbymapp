.mark {
  margin-top: 4rpx;
  background-color: #f74c31;
  text-align: center;
  line-height: 35rpx;
  font-size: 28rpx;
  width: 35rpx;
  height: 35rpx;
  border-radius: 18rpx;
  color: #fff;
}

.line {
  height: 1px;
  width: 100%;
  background-color: #e0e1e2;
}
.contact_wait{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top:170rpx;
}