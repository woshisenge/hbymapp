<!--pages/teacher/issue_content/issue_content.wxml-->
<!-- 问题详情页 -->
<view class="page">
  <view class='page_bd'>
    <view class="weui-panel">
      <view wx:if="{{ask.length == 0}}">
        
      </view>
      <view class="weui-panel__bd" wx:for="{{ask}}" wx:key="">
          <view class="weui-media-box weui-media-box_small-appmsg">
              <view class="weui-cells weui-cells_in-small-appmsg">
                  <view class="weui-cell weui-cell_access">
                      <view class="weui-cell__hd"><image src="{{item.HEADURL}}" style="width: 50rpx;height: 50rpx;margin-right: 5px;border-radius:50%"  /></view>
                      <view class="weui-cell__bd weui-cell_primary">
                          <view>{{item.USERNAME}}  <text class='time'>{{item.CREATETIME}}</text></view>
                      </view>
                  </view>
              </view>
          </view>
          <view class="weui-media-box weui-media-box_text">
              <view class="weui-media-box__title weui-media-box__title_in-text">{{item.CONTENT}}</view>
          </view>
          <view class="weui-panel__ft">
              <button class="weui-btn mini-btn" type="primary" size="mini" bindtap="answer" hidden="{{hidden}}">问题回复</button>
          </view>
      </view>
    </view>
    <view class="answer">{{answer.length}}条回答<text style="color:rgb(90,180,170)">（点击老师头像可查看老师详细资料）</text></view>
    <view wx:if="{{answer.length == 0}}" class="expert_none">
      <image src="/images/expert.png" style="width:400rpx;height:200rpx;"></image>
      <text style="margin-top:30rpx;color:#ff6767">专家正在拼命赶来回复您！请稍后！</text>
    </view>
    <view class="weui-panel" wx:for="{{answer}}" wx:key="">
      <view class="weui-panel__bd" >
          <view class="weui-media-box weui-media-box_small-appmsg" bindtap="introduce" id="{{item.USER_ID}}">
              <view class="weui-cells weui-cells_in-small-appmsg">
                  <view class="weui-cell weui-cell_access">
                      <view class="weui-cell__hd"><image src="{{item.HEADURL}}" style="width: 50rpx;height: 50rpx;margin-right: 5px;border-radius:50%" /></view>
                      <view class="weui-cell__bd weui-cell_primary">
                            <text>{{item.USERNAME}}</text>  
                            <text class='time'>{{item.CREATETIME}}</text>
                            <!-- <image src="/images/spot.png" style="height:30rpx;width:30rpx;margin-left:50rpx"></image>
                            <text style="margin-left:10rpx">{{item.ZAN}}</text> -->
                      </view>
                  </view>
              </view>
          </view>
          <view class="weui-media-box weui-media-box_text">
              <view class="weui-media-box__desc" style='font-size:16px'>{{item.CONTENT}}</view>
          </view>
          <view class="weui-panel__ft">
              <button class="weui-btn mini-btn" type="primary" size="mini" hidden="{{hidden}}" id="{{item.ANSWER_ID}}" bindtap="answerDelete">删除</button>
          </view>
        </view>
      </view>
  </view>
</view>
<view class='white'></view>