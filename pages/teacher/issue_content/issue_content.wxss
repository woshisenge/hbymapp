/* pages/teacher/issue_content/issue_content.wxss */
.weui-media-box:before{
  border-top:0;
}
weui-cell:before{
  border-top:0;
}
.weui-cells:after{
  border-bottom:0;
}
.weui-panel:after{
  border-bottom:0;
}
.weui-media-box{
  padding:0 30rpx 30rpx 30rpx;
}
.weui-cell{
  padding:20rpx 0;
}
.weui-cells_in-small-appmsg{
  margin-top:20rpx;
}
.weui-panel__ft{
  text-align: right;
  padding:30rpx 30rpx 10rpx 0;
}
button[type=primary] {
  background-color:rgb(90,180,170);
}
.answer{
  padding:5rpx 30rpx;
}
.weui-panel{
  margin:0;
}
.ask{
  width:90%;
  margin-left:10%;
  border-bottom:1rpx solid #eee;
  padding-bottom:16rpx;
}
.ask2{
  width:90%;
  margin-left:10%;
  border-bottom:1rpx solid #eee;
  padding-bottom:16rpx;
}
.time{
  margin-left:30rpx;
  color:#999;
}
.weui-media-box__desc{
  text-indent: 2em;
  display: block;
  overflow:auto;
  word-wrap: break-word;
}
.weui-media-box__title{
    font-weight:400;
    font-size:17px;
    width:auto;
    overflow:visible;
    white-space:inherit;
    text-indent: 2em;
}
.expert_none{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top:200rpx;
}
.weui-cell__hd{
  display: flex;
  justify-content: center;
  align-items: center;
}