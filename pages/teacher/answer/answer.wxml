<!--pages/teacher/answer/answer.wxml-->
<view class="page">
  <view class='page_bd'>
    <view class="weui-cells__title">回复</view>
    <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell">
            <view class="weui-cell__bd">
                <textarea class="weui-textarea"  placeholder="请输入问题回复" bindinput='bindContent'/>
                <!-- <view class="weui-textarea-counter">0/200</view> -->
            </view>
        </view>
    </view>
    <view class="weui-cells__tips"><text style="color:#000">重要提示：</text>所回复的答案中不能含有敏感词汇</view>
  </view>
  <view class="weui-btn-area">
    <button class="weui-btn" type="primary" bindtap="showTopTips">确定</button>
  </view>
</view>
