/* pages/person/person.wxss */
.head{
  width:100%;
  /* margin:3% 3% 0 3%; */
  height:150rpx;
  display:flex;
  flex-direction: row;
  justify-content: flex-start;
  background-color:rgb(90,180,170);
}
.head-top{
  width:88%;
  margin:100rpx 2% 0 10%;
  display:flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.image{
  width:140rpx;
  height:140rpx;
  display: flex;
  justify-content: center;
  align-items: center; 
  border-radius: 50%;
  background-color:white;
}
.image image{
  width:132rpx;
  height:132rpx;
  border-radius: 50%;
}
.name{
  height:120rpx;
  margin-left:30rpx;
  padding-top:30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.nickname{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size:32rpx;
  color:white;
  padding-left:28rpx;
}
.nickname image{
  margin-left:15rpx;
}
.message{
  /* margin-top:20rpx; */
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center; 
}
.message-text{
  padding:0 28rpx;
  color:rgb(90,180,170);
}
.weui-cell_primary{
  font-size:28rpx;
}
.weui-panel{
  margin-top:80rpx;
}
.line{
  height:25rpx;
  border:1rpx solid rgb(90,180,170); 
}
.weui-cells:after{
  border-bottom:0;
}
.vip-style {
  margin-left: 10rpx;
  color: #fff;
  font-size: 28rpx;
  border-radius: 3px;
  padding: 0 5px;
}