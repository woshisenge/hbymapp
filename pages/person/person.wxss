/* pages/person/person.wxss */
.head{
  width:100%;
  /* margin:3% 3% 0 3%; */
  height:300rpx;
  display:flex;
  flex-direction: row;
  justify-content: space-between;
  background-color:rgb(90,180,170);
}

.head-left{
  width:45%;
  margin-left:3%;
  height: 300rpx;
  font-size:28rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.image{
  width:140rpx;
  height:140rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center; 
  border-radius: 50%;
  background-color:white;
}
.image image{
  width:132rpx;
  height:132rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.text{
  width:50%;
  height:200rpx;
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.text-top{
  padding-bottom: 20rpx;
}
.text-bottom{
  font-size:25rpx;
}
.head-right{
  width:45%;
  height:300rpx;
  margin:0 3%;
  color:white;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.number{
  font-size:120rpx;
  margin-top:25rpx;
}
.texts{
  font-size:36rpx;
  margin-top:-20rpx;
}
.center{
  width:100%;
  height:135rpx;
  display: flex;
  flex-direction: row;
  background-color:white;
}
.center-left{
  width:50%;
  height:135rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.center-right{
  width:50%;
  height:135rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.img{
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.img text{
  font-size:25rpx;
  margin-left:15rpx;
}
.numbers{
  font-size:40rpx;
  color:#FF6666;
}
.weui-cell_primary{
  font-size:28rpx;
}