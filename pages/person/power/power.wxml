<!--pages/person/power/power.wxml-->
<!-- <view wx:if="{{isReg && isLoaded}}"> -->
  <view class='head'>
    <text>尊敬的<text style='color:orange'>{{vipname}}</text>，您可享受到如下服务：</text>
  </view>
  <view class="page">
    <view class="page__bd">
        <view class="weui-grids">
          <block wx:for="{{grids}}" wx:key="{{index}}">
            <view id="{{item.url}}" class="weui-grid" hover-class="weui-grid_active" hidden="{{item.checked}}" bindtap='power'>
              <image class="weui-grid__icon" src="{{item.src}}"></image>
              <view class="weui-grid__label">{{item.title}}</view>
            </view>
          </block>
        </view>
    </view>
  </view>
  <button class="weui-btn" type="primary" bindtap="pay" id="{{vipname}}" hidden='{{checked}}' >提升权限</button>

