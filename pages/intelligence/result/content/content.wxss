.banner{
  width:100%;
  height:300rpx;
  position: absolute;
  z-index: -1;
  top:0
}
.banner image{
  width:100%;
  height:100%;
  
}
.top{
  margin:80rpx 10% 30rpx 10%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  color:white;
}
.top-right{
  margin-left:5%;
  
}
.top-right-1{
  font-size:35rpx;
  margin-bottom: 10rpx;
  margin-top:-30rpx;
}
.top-right-2{
  display: flex;
  flex-direction: row ;
  justify-content: space-between;
  align-items: center;
}
.top-right-2 text{
  font-weight: bold;
  margin-right:15rpx;
}
.top-2{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-right:3%;
  margin-top:40rpx;
  background-color:white;
}
.top-2-left{
  width:88%;
  height:100rpx;
  background-color: white;
  display: flex;
  align-items: center;
  
}
.top-2-left text{
  padding-left:8%;
  width:100%;
}
.weui-flex__item{
  padding:10rpx 0;
}
.placeholder{
  text-align: center;
}
.page__bd_spacing{
  background-color: white;
}
.whole{
  width:100%;
  display:flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;  
   border-bottom:1rpx solid #EEEEEE;
}
.left{
  display:flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;  
  width:20%;
}
.left text{
  display:flex;
  justify-content: center;
  align-items: center;
  padding:0rpx 0rpx 0rpx 30rpx;
}
.right{
  width:80%;
  border-left:1rpx solid #EEEEEE;
}
.year{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}